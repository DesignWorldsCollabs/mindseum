@import 'nib'
@import 'jeet'
@import 'axis'

establish-baseline('normalize')
font-face('entypo', '/fonts')

body
  margin: 0

section#gameboard
  width: 100vw; 
  height: 100vh;   
  max-height: 100vw;
  max-width: 100vh;
  position: absolute;
  top:auto;
  bottom:0;
  left:auto;
  right:0;
  margin: auto;

section#gamechain
  position: absolute
  margin: auto
  top: 0
  left: 0
  overflow: scroll

  /* square or landscape */
  @media (min-aspect-ratio: 1/1)
    width: calc(100vw - 100vh)
    bottom: 0
    right: auto

  @media (max-aspect-ratio: 1/1)
    height: calc(100vh - 100vw)
    bottom: auto
    right: 0

.bead, .connect
  background-color: transparent !important
  background-size: cover
  background-position: center center
  background-repeat: no-repeat

.tile
  translate3d(0,0,0)
  span(1/5, cycle: 5)
  padding-bottom: 20%
  transition: opacity 0.4s ease-out;

  &:hover
    /* http://davidwalsh.name/css-flip */
    opacity: 0.9

  &.linked
    opacity: 0.2

  &.disabled
    opacity: 0.08

#chain
  padding: 0
  height: 35px
  margin: 0 auto

.string
  display: block
  float: left
  width: 35px
  height: 35px


#result
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0

  @media (min-aspect-ratio: 1/1)
    margin: 5vh 5vh 0

  @media (max-aspect-ratio: 1/1)
    margin: 20vw 5vw 5vw

.field
  display: flex
  &.url:before
    flex: 0 0 2.75em
  .left
    flex: 1 0 8em
    border-top-right-radius 0
    border-bottom-right-radius 0
  .right
    flex: 0 0 auto
    border-top-left-radius 0
    border-bottom-left-radius 0

button
  outline: none
  button()
  &.empty
    button-disabled()
  &.error
    button-disabled()
  &.validating
    button-disabled()
  &.summarizing
    button-disabled()
  &.summarized
    button-disabled()

fieldset
  margin-top 1em

label
  label: block

input, textarea
  input()
  width 90%
  &.error
    input-error()
  &.validating
    input-warning()
  &[disabled]
    input-disabled()
