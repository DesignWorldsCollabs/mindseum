@import 'jeet'
@import 'axis'

establish-baseline('normalize')
font-face('entypo', '/fonts')

body
  margin: 0

section#gameboard
  width: 100vw; 
  height: 100vh;   
  max-height: 100vw;
  max-width: 100vh;
  position: absolute;
  top:auto;
  bottom:0;
  left:auto;
  right:0;
  margin: auto;

section#gamechain
  position: absolute
  margin: auto
  top: 0
  left: 0
  overflow: scroll

  /* square or landscape */
  @media (min-aspect-ratio: 1/1)
    width: calc(100vw - 100vh)
    bottom: 0
    right: auto

  @media (max-aspect-ratio: 1/1)
    height: calc(100vh - 100vw)
    bottom: auto
    right: 0

.bead, .connect
  background-color: transparent !important
  background-size: cover
  background-position: center center
  background-repeat: no-repeat

.tile
  translate3d(0,0,0)
  span(1/5, cycle: 5)
  padding-bottom: 20%
  transition: opacity 0.4s ease-out;

  &:hover
    /* http://davidwalsh.name/css-flip */
    opacity: 0.9

  &.linked
    opacity: 0.2

  &.disabled
    opacity: 0.08

.string
  display: block
  float: left

  @media (min-aspect-ratio: 1/1)
    width: 10vh
    height: 10vh

  @media (max-aspect-ratio: 1/1)
    width: 10vw
    height: 10vw

#chain
  position: absolute
  padding: 0

  @media (min-aspect-ratio: 1/1)
    width: 10vh
    height: 40vh
    top: 10vh
    left: 0
    right: 0
    margin: 0 auto

  @media (max-aspect-ratio: 1/1)
    width: 40vw
    height: 10vw
    left: 10vw
    top: 0
    bottom: 0
    margin: auto 0


#result
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0

  @media (min-aspect-ratio: 1/1)
    margin: 60vh 5vh 0

  @media (max-aspect-ratio: 1/1)
    margin: 0 5vh 0 60vw

  input
    width: 100%
    border: 0
    border-bottom: 1px solid #BBB
    outline: none

