html, body
  height 100%

body
  padding-top 64px

nav + .container-fluid
  margin-top 20px

.navbar-fixed-top
  margin-bottom 0

.starter-template
  padding: 40px 15px
  text-align: center

.tall
  height 100%
  &.container-fluid
    margin-top 0
  &.scrollable
    padding-top 20px
    overflow-y scroll
  &.scrollable + .tall
    padding-left 0

.clipping-box
  border-color: #ddd;
  border-width: 1px;
  border-radius: 4px;
  box-shadow: none;
  padding: 0 15px;
  border-style: solid;
  margin: 0 0 15px auto;

a.connect
  position relative

a.connect::before
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  display block
  height 34px
  padding 6px 12px
  font-size 14px
  font-weight 400
  line-height 1.42857143
  text-align center
  vertical-align middle
  border-radius 4px
  color #333
  background-color #fff
  border 1px solid #ccc

a.connect:hover::before
  color #333
  background-color #e6e6e6
  border-color #adadad

