  // content "Explore"

.prettylink
  white-space nowrap
  text-overflow ellipsis
  overflow hidden

.has-feedback-left
  .form-control
    padding-left 32px
    padding-right initial
  .form-control-feedback
    left 0
    right initial

h4.list-group-item-heading
  font-size 16px
  font-weight normal
  margin-bottom 2px

.list-group-item-text.summary
  color #555
  margin-bottom 2px

.form-group.floatlabel
  margin-top -16px

label.floatlabel
  font-size 16px
  position relative
  top 16px
  transition 240ms
  transform-origin left top
  transform translate3d(0, 22px, 0) scale(1)
  opacity 0.4

  &.focused
    transform scale(0.75)
    opacity 1

.clipping
  .connections
    position absolute
    top 15px
    right 15px
    &
      height 53px
    & .connection
      display block
      width 53px
      border-radius 50%
      background-size cover
      background-position center
    & .connection, & .action
      height 53px
      margin-left 15px
      float right
