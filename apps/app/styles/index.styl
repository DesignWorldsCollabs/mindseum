html, body
  height 100%

body
  padding-top 50px

nav + .container-fluid
  margin-top 20px

.navbar-fixed-top
  margin-bottom 0

.starter-template
  padding: 40px 15px
  text-align: center

.tall
  height 100%
  &.container-fluid
    margin-top 0
  &.scrollable
    padding-top 20px
    overflow-y scroll
  &.scrollable + .tall
    padding-left 0

.clipping-box
  border-color: #ddd;
  border-width: 1px;
  border-radius: 4px;
  box-shadow: none;
  padding: 0 15px;
  border-style: solid;
  margin: 0 0 15px auto;
