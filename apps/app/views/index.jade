import:(src="./home")
import:(src="./explore")
import:(src="./collect")
import:(src="./associate")
import:(src='./login')
import:(src='./register')

Head:
  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible" content="IE=edge")
  meta(name="viewport" content="width=device-width, initial-scale=1")

Title:
  | {{_page.title}}

Body:
  view(is="header")
  view(is="{{$render.ns}}")
  view(is="footer")

header:
  view(is="d-connection-alert")
  view(is="d-before-unload")
  nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
    div.container-fluid
      div.navbar-header
        button.navbar-toggle(type="button",on-click="navbarCollapse.toggle()")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/") Mindseum
      collapse.navbar-collapse(as="navbarCollapse")
        ul.nav.navbar-nav
          li(class="{{if $render.ns === 'explore'}}active{{/if}}")
            a(href="/explore/default-board") Explore
          li(class="{{if $render.ns === 'collect'}}active{{/if}}")
            a(href="/collect") Collect
          li(class="{{if $render.ns === 'associate'}}active{{/if}}")
            a(href="/associate") Associate

        ul.nav.navbar-nav.navbar-right
          if _session.loggedIn
            li
              a(href="/auth/logout") Logout
          else
            li
              a(href="/login") Login

footer:
  div.container-fluid
    hr
    footer
      p Footer {{@year}}
